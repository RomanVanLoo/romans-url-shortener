<div class="wrapper" style="background-image: linear-gradient(rgba(0, 0, 0, 0.36), rgba(0, 0, 0, 0.65)), url('https://res.cloudinary.com/ddngbvo3j/image/upload/v1570992875/giyvcxffmcfckyokyu7x.jpg');" >
  <p class="main-title">Roman's URL shortener</p>
  <div class="main-url-insert">
    <%= form_with model: @link, url: save_link_path, as: :post do |f| %>
      <div class="flex-row">
        <p class="preprinted-url">www.romansurl.com/</p>
        <%= f.text_field :short_url, class: "main-short-url" %>
      </div>
      <div class="flex-row redirect">
        <i class="fas fa-angle-double-down main-redirect-to"></i>
        <p class="main-redirect-to">Redirect To</p>
        <i class="fas fa-angle-double-down main-redirect-to"></i>
      </div>
      <div class="flex-row-column">
        <%= f.text_field :long_url, class: "main-long-url" %>
      <%= f.submit "Short It", class: "submit-btn" %>
    </div>
    <% end %>
  </div>
</div>
