body {
  margin: 0;
  color: white;
  font-family: "Roboto";
  font-weight: 300;
}

input {
  color: white;
  font-size: 25px;
  padding-left: 10px;
  font-weight: 100;
}

.wrapper {
  background-color: gray;
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  align-items: center;
  justify-content: center;
  /* fallback */
  background-size: cover;
}

.main-title {
  font-size: 30px;
  font-size: 50px;
  margin-bottom: 10vh;
}

.main-url-insert {
  display: flex;
  flex-direction: column;
  font-size: 25px;
  color: white;
}

.flex-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 25px;
}

.flex-row-column {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 30px;
  align-items: center;
}

.preprinted-url {
  margin: 0;
}

.main-short-url {
  height: 20px;
  background-color: rgba(255,255,255,0.3);
  border: none;
  height: 35px;
  margin-left: 15px;
  width: 200px;
  border-radius: 5px;
}

.redirect {
  justify-content: center;
  font-size: 30px;
}

.main-redirect-to {
  font-size: 25px;
  text-align: center;
  margin: 30px 15px;
}

.main-long-url {
  width: 30vw;
  max-width: 300px;
  min-width: 100px;
  background-color: rgba(255, 255, 255, 0.3);
  border: none;
  height: 35px;
  margin-left: 15px;
  border-radius: 5px;
  margin-bottom: 30px;
}

.submit-btn {
  border-radius: 5px;
  width: 200px;
  height: 50px;
  font-size: 25px;
  background: none;
  color: white;
  border: 1px solid white;
  &:hover {
    background-color: rgba(255, 255, 255, 0.3);
  }
}
