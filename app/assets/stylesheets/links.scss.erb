body {
  margin: 0;
  color: white;
  font-family: "Roboto";
}

.wrapper {
  background-color: gray;
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  align-items: center;
  justify-content: center;
  background-image: url(landscape.jpg); /* fallback */
  background-image: linear-gradient(rgba(0, 0, 0, 0.36), rgba(0, 0, 0, 0.45)), url(landscape.jpg;);
  background-size: cover;
}

.main-title {
  font-size: 30px;
  font-size: 50px;
  margin-bottom: 15vh;
}

.main-url-insert {
  display: flex;
}

.flex-row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.preprinted-url {
  font-size: 20px;
  margin: 0;
}

.main-short-url {
  height: 20px;
  background-color: rgba(255,255,255,80%);
  border: none;
}

.main-redirect-to {
  font-size: 30px;
  text-align: center;
}

.main-long-url {
  width: 30vw;
  max-width: 300px;
  min-width: 100px;
}

.submit-btn {
  width: 70px;
  border-radius: 5px;
  height: 20px;
  font-size: 15px;
  background-color: #00F788;
}
